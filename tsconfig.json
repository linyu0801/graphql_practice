{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "baseUrl": ".",                    // 設置基準路徑為當前目錄
    "paths": {
      "*": ["*", "./*", "src/*"]      // 指定額外的模組路徑映射
    }
  }
}